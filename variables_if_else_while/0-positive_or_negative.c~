#include <stdio.h>
#include <time.h>
#include <stdlib.h>
/**
 * main - prints whether the number stored in the variable n
 *is positive or negative.
 * Return: 0
 */
int main(void)
{
int n;
rand(time(0));
n = rand() - RAND_MAX / 2;
if (n > 0)
printf("is positive\n");
else if (n < 0)
printf("is negative\n");
else
printf("is zero\n");
return (0);
}
